<h1>お問い合わせ内容確認</h1>

<table>
  <tbody>
    <tr>
      <td class="text-center">お名前</td>
      <td><%= @contact.name %></td>
    </tr>
    <tr>
      <td class="text-center">メールアドレス</td>
      <td><%= @contact.email %></td>
    </tr>
    <tr>
      <td class="text-center">メッセージ</td>
      <td><%= @contact.message %></td>
    </tr>
  </tbody>
</table>

<%= form_for(@contact, url: thanks_path) do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :message %>
  <div><%= f.submit '送信' %></div>
<% end %>
